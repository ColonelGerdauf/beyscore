  --muted: oklch(0.2698 0.0055 286.0255);
  --muted-foreground: oklch(0.7073 0.0072 286.2146);
  --accent: oklch(0.2637 0.0297 250.9666);
  --accent-foreground: oklch(0.9816 0.0017 247.839);
  --destructive: oklch(0.6633 0.2236 28.2919);
  --destructive-foreground: oklch(1 0 0);
  --border: oklch(0.2698 0.0055 286.0255);
  --input: oklch(0.2698 0.0055 286.0255);
  --ring: oklch(0.6243 0.2056 255.4861);
  --chart-1: oklch(0.6243 0.2056 255.4861);
  --chart-2: oklch(0.6633 0.2236 28.2919);
  --chart-3: oklch(0.7303 0.1944 147.4439);
  --chart-4: oklch(0.7652 0.1752 62.5738);
  --chart-5: oklch(0.5295 0.191 278.3368);
  --sidebar: oklch(0.2055 0.0039 286.0495);
  --sidebar-foreground: oklch(0.7073 0.0072 286.2146);
  --sidebar-primary: oklch(0.6243 0.2056 255.4861);
  --sidebar-primary-foreground: oklch(1 0 0);
  --sidebar-accent: oklch(0.2637 0.0297 250.9666);
  --sidebar-accent-foreground: oklch(0.9816 0.0017 247.839);
  --sidebar-border: oklch(0.2698 0.0055 286.0255);
  --sidebar-ring: oklch(0.6243 0.2056 255.4861);
  --font-sans: var(--font-geist-sans);
  --font-serif: var(--font-georgia);
  --font-mono: var(--font-geist-mono);
  --radius: 1rem;
  --shadow-2xs: 0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.05);
  --shadow-xs: 0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.05);
  --shadow-sm:
    0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.1),
    0rem 1px 2px -1px hsl(0 0% 0% / 0.1);
  --shadow:
    0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.1),
    0rem 1px 2px -1px hsl(0 0% 0% / 0.1);
  --shadow-md:
    0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.1),
    0rem 2px 4px -1px hsl(0 0% 0% / 0.1);
  --shadow-lg:
    0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.1),
    0rem 4px 6px -1px hsl(0 0% 0% / 0.1);
  --shadow-xl:
    0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.1),
    0rem 8px 10px -1px hsl(0 0% 0% / 0.1);
  --shadow-2xl: 0rem 0.0625rem 0rem 0rem hsl(0 0% 0% / 0.25);
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply bg-background text-foreground;
  }
}
